@model IList<Person>
@{
    ViewData["Title"] = "People";
}

<h1>@ViewData["Title"]</h1>

<a class="btn btn-primary" asp-action="Create">New Person</a>

<table class="table table-striped table-dark">
    <thead>
    <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var person in Model)
    {
        <partial name="PersonPartial" model="person"/>
    }
    </tbody>
</table>